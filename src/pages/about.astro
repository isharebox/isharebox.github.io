---
import Layout from "@/layouts/Layout.astro";
import config from "urodele.config";
---

<Layout title={`About | ${config.head.brand}`}>
  <main>
    <div class="content">
      <h1 class="page-title">About me</h1>
      
      <div class="about-content">
        <p>Hi, I'm 2kindlebox.</p>
        
        <p>Two wheels. Paperbacks with creased spines. Leonard Cohen on loop.</p> 
        <p>Building a life light enough to carry to an island someday—with her.</p>
        
        <p id="hitokoto">
          <a href="#" id="hitokoto_text">:D 获取中...</a>
        </p>
        
        <script>
          fetch('https://v1.hitokoto.cn')
            .then(response => response.json())
            .then(data => {
              const hitokoto = document.querySelector('#hitokoto_text')
              hitokoto.href = `https://hitokoto.cn/?uuid=${data.uuid}`
              hitokoto.innerText = data.hitokoto
            })
            .catch(console.error)
        </script>
      </div>
      
      <a href="/" class="back-link">← Back to Home</a>
    </div>
  </main>
</Layout>

<style>
  main {
    display: flex;
    justify-content: center;
    width: 100%;
    padding: 0 16px;
  }

  .content {
    width: 100%;
    max-width: 720px;
    padding: 2rem 0;
    margin: 0 auto;              /* ← ADD THIS: ensures centering */
    text-align: center;          /* ← ADD THIS: centers all text content */
  }

  .page-title {
    font-size: 1.8rem;
    font-weight: 600;
    color: #c8d3f5;
    margin-bottom: 1.5rem;
    padding-bottom: 0.5rem;
    border-bottom: 1px dashed #292e42;
  }

  .about-content {
    color: #c8d3f5;
    line-height: 1.8;
    margin-bottom: 2rem;
  }

  .about-content p {
    margin-bottom: 1rem;
  }

  .back-link {
    display: inline-block;       /* ← ADD THIS: allows centering to work */
    color: #565f89;
    font-size: 0.9rem;
    text-decoration: none;
    margin-top: 1rem;
  }

  .back-link:hover {
    color: #7aa2f7;
  }

  #hitokoto_text {
    text-shadow: 1px 0px 10px #757575; 
    font-weight: bold; 
    color: #9336B4;
    letter-spacing: 3pt; 
    word-spacing: 3pt; 
    font-size: 16px; 
    text-align: center;          /* ← CHANGED: was left, now center */
    font-family: trebuchet ms; 
    line-height: 1; 
    margin: 26px; 
    padding: 5px;
  }
</style>
