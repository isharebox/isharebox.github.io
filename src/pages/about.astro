---
import Layout from "@/layouts/Layout.astro";
import Curve from '@/components/Curve.astro';
import config from "urodele.config";
---

<Layout title={`About | ${config.head.brand}`}>
  <main>
    <div class="content">
      <h1 class="page-title">About me</h1>
      
      <div class="about-content">
        <blockquote class="quote-block">
          <p>「Why join the navy if you can be a pirate.」</p>
        </blockquote>
        <p>Two wheels. Paperbacks with creased spines. Leonard Cohen on loop.</p> 
        <p>Building a life light enough to carry to an island someday—with her.</p>
        
        <p id="hitokoto">
          <a href="#" id="hitokoto_text">:D 获取中...</a>
        </p>
        
        <script>
          fetch('https://v1.hitokoto.cn')
            .then(response => response.json())
            .then(data => {
              const hitokoto = document.querySelector('#hitokoto_text')
              hitokoto.href = `https://hitokoto.cn/?uuid=${data.uuid}`
              hitokoto.innerText = data.hitokoto
            })
            .catch(console.error)
        </script>
        
        <Curve color="#7aa2f7" width="8rem" />
      </div>
      
      <!-- 图片移到 about-content 外部，独立居中 -->
      <div class="image-wrapper">
        <figure>
          <img src="https://dataphoto.sibnet.ru/upload/imggreat/1770693757991494611.jpg" alt="small cabin by the sea" />
          <figcaption>Small cabin by the sea</figcaption>
        </figure>
      </div>
    </div>
  </main>
</Layout>

<style>
  main {
    display: flex;
    justify-content: center;
    width: 100%;
    padding: 0 16px;
  }

  .content {
    width: 100%;
    max-width: 720px;
    padding: 2rem 0;
    margin: 0 auto;
    text-align: center;
  }

  .page-title {
    font-size: 1.8rem;
    font-weight: 600;
    color: #c8d3f5;
    margin-bottom: 1.5rem;
    padding-bottom: 0.5rem;
    border-bottom: 1px dashed #292e42;
  }

  .about-content {
    color: #c8d3f5;
    line-height: 1.8;
    margin-bottom: 2rem;
  }

  .about-content p {
    margin-bottom: 1rem;
  }

  .back-link {
    display: inline-block;
    color: #565f89;
    font-size: 0.9rem;
    text-decoration: none;
    margin-top: 1rem;
  }

  .back-link:hover {
    color: #7aa2f7;
  }

  .quote-block {
    margin: 2rem auto;
    padding: 1rem 1.5rem;
    border-left: 3px solid #7aa2f7;
    background: rgba(122, 162, 247, 0.05);
    color: #b0d4d4;
    font-style: italic;
    border-radius: 0 8px 8px 0;
    display: inline-block;
    width: fit-content;
    max-width: 100%;
  }

  #hitokoto_text {
    text-shadow: 1px 0px 10px #757575;
    font-weight: bold;
    color: #9336B4;
    letter-spacing: 3pt;
    word-spacing: 3pt;
    font-size: 16px;
    text-align: center;
    font-family: trebuchet ms;
    line-height: 1;
    margin: 26px;
    padding: 5px;
  }

  p {
    margin-block: 1.2em;
  }

  h1, h2, h3, h4, h5, h6 {
    margin-block: 1.6rem 0.5rem;
    line-height: 1.3;
  }

  hr, img, blockquote {
    margin-block: 1.6em;
  }

  /* ★ 图片居中容器 */
  .image-wrapper {
    display: flex;
    justify-content: center;
    margin-top: 2rem;
  }

  .image-wrapper figure {
    margin: 0;
  }

 /* ★ 新效果：白色边框 + 内发光，深色背景清晰可见 */
  .image-wrapper img {
    max-width: 100%;
    height: auto;
    border-radius: 8px;
    border: 2px solid rgba(200, 211, 245, 0.6);
    box-shadow: 
      inset 0 0 20px rgba(122, 162, 247, 0.3),
      0 0 0 1px rgba(122, 162, 247, 0.2),
      0 4px 15px rgba(0, 0, 0, 0.3);
    transition: all 0.3s ease;
  }

  /* ★ 悬浮：边框变亮 + 外发光增强 */
  .image-wrapper img:hover {
    border-color: rgba(200, 211, 245, 0.9);
    box-shadow: 
      inset 0 0 30px rgba(122, 162, 247, 0.4),
      0 0 20px rgba(122, 162, 247, 0.4),
      0 8px 25px rgba(0, 0, 0, 0.4);
    transform: translateY(-2px);
  }

  /* ★ 图片说明 */
  .image-wrapper figcaption {
    margin-top: 0.8rem;
    font-size: 0.9em;
    color: #565f89;
    font-style: italic;
    text-align: center;
  }

  .curve {
    display: block;
    width: 8rem;
    height: 0.5rem;
    margin-block: 1.6em;
    margin-inline: auto;
    background-color: var(--curve-color);
    opacity: 0.7;
    mask: url("data:image/svg+xml;utf8,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 120 8'><path d='M0 4 Q30 0 60 4 T120 4' fill='none' stroke='black' stroke-width='2'/></svg>") center / contain no-repeat;
  }

  /* 保留：Markdown 图片后的斜体段落说明 */
  main p:has(> img) + p > em {
    display: block;
    margin-block: -0.5rem 1.6rem;
    font-size: 0.9em;
    opacity: 0.8;
    text-align: center;
  }

  .note {
    display: block;
    padding: 1em 1.2em;
    margin-block: 1.8rem;
    font-size: 0.9em;
    border-left: 2px solid #7aa2f7;
    background: rgba(122, 162, 247, 0.05);
  }

  .note::before {
    content: "Note";
    display: block;
    font-weight: bold;
    font-size: 0.8em;
    text-transform: uppercase;
    margin-bottom: 0.4em;
    opacity: 0.8;
  }

  .pullquote {
    font-size: 1.4em;
    line-height: 1.3;
    color: #c8d3f5;
    text-align: center;
    margin-block: 2rem;
    padding-inline: 10%;
    border: none;
    font-style: italic;
  }
</style>
