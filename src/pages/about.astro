---
import Layout from "@/layouts/Layout.astro";
import config from "urodele.config";
---

<Layout title={`About | ${config.head.brand}`}>
  <main>
    <div class="content">
      <h1 class="page-title">About me</h1>
      
      <div class="about-content">

        <p>
           <blockquote>
          「Why join the navy if you can be a pirate.」 
           </blockquote>
        </p>
        <p>Two wheels. Paperbacks with creased spines. Leonard Cohen on loop.</p> 
        <p>Building a life light enough to carry to an island someday—with her.</p>
        <p id="hitokoto">
          <a href="#" id="hitokoto_text">:D 获取中...</a>
        </p>
        
        <script>
          fetch('https://v1.hitokoto.cn')
            .then(response => response.json())
            .then(data => {
              const hitokoto = document.querySelector('#hitokoto_text')
              hitokoto.href = `https://hitokoto.cn/?uuid=${data.uuid}`
              hitokoto.innerText = data.hitokoto
            })
            .catch(console.error)
        </script>
      </div>
      
    </div>
  </main>
</Layout>

<style>
  main {
    display: flex;
    justify-content: center;
    width: 100%;
    padding: 0 16px;
  }

  .content {
    width: 100%;
    max-width: 720px;
    padding: 2rem 0;
  }

  .page-title {
    font-size: 1.8rem;
    font-weight: 600;
    color: #c8d3f5;
    margin-bottom: 1.5rem;
    padding-bottom: 0.5rem;
    border-bottom: 1px dashed #292e42;
  }

  .about-content {
    color: #c8d3f5;
    line-height: 1.8;
    margin-bottom: 2rem;
  }

  /* ★ Quote Block - 宽度自适应，不撑满 */
  .quote-block {
    margin: 2rem auto;           /* 上下间距，左右居中 */
    padding: 1rem 1.5rem;
    border-left: 3px solid #7aa2f7;
    background: rgba(122, 162, 247, 0.05);
    color: #b0d4d4;
    font-style: italic;
    border-radius: 0 8px 8px 0;
    display: inline-block;       /* ★ 宽度自适应内容 */
    width: fit-content;           /* 严格适配内容宽度 */
    max-width: 100%;             /* 不超过父容器 */
  }

  .quote-block p {
    margin: 0;
    font-size: 1.1rem;
  }

  /* ★ 段落间距平均分布 */
  .about-content > p {
    margin: 2rem 0;              /* 上下相等的间距 */
  }

  .about-content > p:first-of-type {
    margin-top: 2.5rem;          /* 第一个段落与 quote 的间距 */
  }

  .about-content > p:last-of-type {
    margin-bottom: 2.5rem;       /* 最后一个段落下方的间距 */
  }

  /* 中文特殊样式 */
  .chinese-text {
    color: #7aa2f7;              /* 紫色高亮 */
  }

  .back-link {
    color: #565f89;
    font-size: 0.9rem;
    text-decoration: none;
  }

  .back-link:hover {
    color: #7aa2f7;
  }
</style>
