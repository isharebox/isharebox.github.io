<p id="hitokoto">
  <a href="#" id="hitokoto_text">:D 获取中...</a>
</p>
<script>
  fetch('https://v1.hitokoto.cn')
    .then(response => response.json())
    .then(data => {
      const hitokoto = document.querySelector('#hitokoto_text')
      hitokoto.href = `https://hitokoto.cn/?uuid=${data.uuid}`
      hitokoto.innerText = data.hitokoto
    })
    .catch(console.error)
</script>
<style>
  #hitokoto_text {
    text-shadow: 1px 0px 10px #757575; font-weight: bold; color: #000000; letter-spacing: 3pt; word-spacing: 3pt; font-size: 20px; text-align: left; font-family: trebuchet ms; line-height: 1; margin: 26px; padding: 5px;
    color: #9336B4;
    font-size: 16px;
  }
</style>
</p>
      </div>
      
      <a href="/" class="back-link">← Back to Home</a>
    </div>
